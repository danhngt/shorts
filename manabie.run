#!/bin/bash

echo -e "\n"
echo "==========="
echo "waiting...."
echo "==========="
echo -e "\n"


while true; do
	if [ $(kubectl -n backend get pod | grep gandalf | wc -l) -eq 2 ]; then
		if [ $(kubectl -n backend get pod | grep Terminating | wc -l) -eq 0 ]; then
			break
		fi
	fi
	sleep 1
done
eval $@

